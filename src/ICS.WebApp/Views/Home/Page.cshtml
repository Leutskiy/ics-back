<div id="summary" class="section panel panel-primary">
    <div class="panel-heading">Приглашения</div>
    <div class="panel-body">
        <table class="table table-striped table-condensed">
            <thead>
                <tr><th>Наименование</th></tr>
            </thead>
            <tbody data-bind="foreach: invitations">
                <tr>
                    <td data-bind="text: Name"></td>
                    <td>
                        <button class="btn btn-xs btn-primary" data-bind="click: handleChangeClick">
                            Редактировать
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
        <button class="btn btn-primary" data-bind="click: handleCreateClick">
            Новое
        </button>
    </div>
</div>