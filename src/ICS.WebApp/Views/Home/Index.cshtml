@model ICS.WebApp.Models.LoginViewModel

<section id="cover" class="min-vh-100">
    <div id="cover-caption">
        <div class="container">
            <div class="row text-white">
                <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                    <h1 class="display-4 py-2 text-truncate">Invitation System</h1>
                    <div class="px-2">
                        <form action="" class="justify-content-center">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "text", @placeholder = "Your email", @data_bind = "value: loginEmail" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Your password", @data_bind = "value: loginPassword" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @type = "text"})
                            </div>
                            <div class="form-group">
                                <div class="col-md-5">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @data_bind = "value: rememberMe" })
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-lg" data-bind="click: login">Войти</button>
                            <p>
                                @Html.ActionLink("Register as a new user", "Register")
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>